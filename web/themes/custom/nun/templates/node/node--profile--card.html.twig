<div class="card">
  {% if content.field_portrait|render %}
    <div class="card-img-top">
      {{ content.field_portrait }}
    </div>
  {% endif %}
  <div class="card-body">
    <div class="card-title">
      {{ title_prefix }}
      {% if not page %}
        <h3{{ title_attributes }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h3>
      {% endif %}
      {{ title_suffix }}
    </div>
    <div class="details">
      {{ content|without('field_portrait') }}
    </div>
  </div>
</div>

